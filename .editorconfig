# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace  = true
charset = utf-8

# Tab indentation (no size specified)
indent_style = tab
tab_width = 4

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
